<script>

    findComments()

    //댓글 조회 및 정렬
    function findComments(){

        const id = window.location.search.replace('?', '');

        $.ajax({
            type: "GET",
            url: `/api/comments/${id}`,
            dataType: 'JSON',
            data: {},
            async: false,

            success: function (response) {

                result = response.result

                const cmtCount = result.length

                for (let i = 0; i < result.length; i++){

                    let comment = response.result[i].comment

                    let userId = response.result[i].userId

                    let id = response.result[i].id

                    let template = `
                    <div class="mb-3 row">
                        <label id="commentId${i}" for="inputPassword" class="col-sm-2 col-form-label">@${userId}</label>
                        <div class="col-sm-10" style="display: flex; ">
                            <input value="${comment}" id="comment${i}" type="text" class="form-control">
                            <button style="margin-left: 2px; margin-right: 2px;" data-id="${id}" type="button" class="btn btn-primary">E</button>
                            <button onclick="confirmDelete('${id}')" type="button" class="btn btn-primary">D</button>
                        </div>
                    </div>`

                    $('#Comments').append(template)

                    // console.log( document.getElementById('Comments').lastChild )

                    document.getElementById('Comments').lastChild.querySelector('button').addEventListener('click', confirmEdit)

                    



                }

            }

        });

    }




    //댓글등록
    function saveComment() {

        const comment = $('#comment').val();
        const postId = window.location.search.replace('?', '');


        $.ajax({
            type: "POST",
            url: `/api/comment/${postId}`,
            data: {
                comment: comment,
                postId: id
            },
            headers: {
                authorization: `Bearer ${localStorage.getItem("token")}`,
            },

            success: function (response) {
                alert('댓글이 등록되었습니다.')
                window.location.reload();
            }

        });
    }

    //댓글 수정 확인
    function confirmEdit(event){

        const id = event.target.getAttribute('data-id') 
        const input = event.target.previousElementSibling.value


        if(confirm('수정 하시겠습니까?')){
            confirm_Comment(id, input)
        }
    }

    //댓글 사용자 확인
    function confirm_Comment(id, input) {

        $.ajax({
            type: "GET",
            url: `/api/_auth/${id}`,
            data: {},
            headers: {
                authorization: `Bearer ${localStorage.getItem("token")}`,
            },
            dataType: 'JSON',

            async: false,

            success: function (response) {

                const id = response.id

                editComment(id, input)

            },

            error: function (error) {
                alert(error.responseJSON.errorMessage)
                window.location.reload()
            }
        });

    }

    //댓글 수정 실행
    function editComment(id, input) {



        $.ajax({
            type: "PUT",
            url: `/api/_edit/${id}`,
            data: {
                comment: input
            },
            async: false,
            success: function (response) {
                console.log("EDIT API successful");
            },

        })
        window.location.reload()
    }


    //댓글 삭제 확인
    function confirmDelete(id) {
        if(confirm("삭제 하시겠습니까?")){
            confirmComment(id)
        }
    }

    //댓글 사용자 확인
    function confirmComment(id) {


        $.ajax({
            type: "GET",
            url: `/api/_auth/${id}`,
            data: {},
            headers: {
                authorization: `Bearer ${localStorage.getItem("token")}`,
            },
            dataType: 'JSON',

            async: false,

            success: function (response) {
                deleteComment(response.id)
            },

            error: function (error) {
                alert(error.responseJSON.errorMessage)
                window.location.href = `/detail?${id}`
            }
        });

    }

    //댓글삭제
    function deleteComment(id) {

        $.ajax({
            type: "DELETE",
            url: `/api/_delete/${id}`,
            async: false,
            success: function (response) {
                console.log("DELETE API successful");
            },

        })
        window.location.reload()
    }


    //게시글 삭제 확인
    function checkDelete() {
        if(confirm("삭제 하시겠습니까?")){
            checkUser()
        }
    }
   
    //게시글 사용자 확인
    function checkUser() {

        const id = window.location.search.replace('?', '');

        $.ajax({
            type: "GET",
            url: `/api/auth/${id}`,
            data: {},
            headers: {
                authorization: `Bearer ${localStorage.getItem("token")}`,
            },
            dataType: 'JSON',

            async: false,

            success: function (response) {
                exeDelete()
            },

            error: function (error) {
                alert(error.responseJSON.errorMessage)
                window.location.href = `/detail?${id}`
            }
        });

    }

    //게시글 삭제 실행
    function exeDelete() {

        const id = window.location.search.replace('?', '');

        $.ajax({
            type: "DELETE",
            url: `/api/delete/${id}`,
            async: false,
            success: function (response) {
                console.log("POST API successful");
            },

        })
        window.location.href = '/';
    }






    //수정하기 페이지 이동

    const _id = window.location.search.replace('?', '');


    var button = document.getElementById('target');
    button.addEventListener('click', function (event) {
        window.location.href = `/edit?${_id}`
    });

</script>

